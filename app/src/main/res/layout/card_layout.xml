<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_Evento"
    android:layout_margin="12dp"
    card_view:cardBackgroundColor="@color/primary_light"
    card_view:cardCornerRadius="30dp"
    card_view:cardElevation="6dp"
    card_view:contentPadding="4dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <ImageView
            android:id="@+id/imagenEvento"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="16dp" />

        <TextView
            android:id="@+id/TituloEvento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Prueba"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textColor="@color/primary_text"
            android:layout_toEndOf="@id/imagenEvento"
            android:layout_alignParentTop="true"
            />

        <TextView
            android:id="@+id/FechaInicio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/TituloEvento"
            android:layout_toEndOf="@id/imagenEvento"
            android:text="Inicio: 23/Sep/2021"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/icons"
            />

        <TextView
            android:id="@+id/FechaCierre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/FechaInicio"
            android:layout_toEndOf="@id/imagenEvento"
            android:text="Cierra: 23/Sep/2021"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/icons"
            />




    </RelativeLayout>


</androidx.cardview.widget.CardView>

